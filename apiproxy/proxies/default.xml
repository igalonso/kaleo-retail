<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>JS-GetDynamicPath</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="Not Found">
            <Description/>
            <Request>
                <Step>
                    <Name>RaiseFault-NotFound</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>((proxy.pathsuffix MatchesPath "/tracking-orders/") or (proxy.pathsuffix MatchesPath "/tracking-orders")) and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Create tracking order">
            <Description>Create a new tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Get a specific tracking order">
            <Description>Get a specific tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Update a tracking order">
            <Description>Update a specific tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="Get locations from tracking order">
            <Description>Get all locations</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/locations") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Add Location">
            <Description>Add location to tracking order</Description>
            <Request>
                <Step>
                    <Name>JS-InsertTimestampToPayload</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/locations") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Get a location">
            <Description>Get specific location to tracker order.</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/locations/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Get notes">
            <Description>Get notes to tracker order.</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/notes") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Add notes">
            <Description>Add notes to tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/notes") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Get a note">
            <Description>Get specific note to tracker order.</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/notes/*") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/kaleo-retail</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>