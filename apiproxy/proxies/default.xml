<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>JS-GetDynamicPath</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="Get all tracking orders">
            <Description>Get all tracking orders</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Create tracking order">
            <Description>Create a new tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Get a specific tracking order">
            <Description>Get a specific tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Update a tracking order">
            <Description>Update a specific tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="Get locations from order">
            <Description>all locations from tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/locations") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Get a location from order">
            <Description>all locations from tracking order</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/locations/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Add a location to and order">
            <Description>all locations from tracking order</Description>
            <Request>
                <Step>
                    <Name>JS-InsertTimestampToPayload</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/tracking-orders/*/locations") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>